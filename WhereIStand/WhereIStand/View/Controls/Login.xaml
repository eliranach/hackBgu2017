<UserControl x:Class="WhereIStand.View.Controls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>

        <Button Content = "Login" Background="#FF544CFB"   Foreground="White" Style="{StaticResource BaseButtonStyle}" Height = "30" VerticalAlignment="Top"  Click="LoginClick" Grid.Row="1" FontSize="10" HorizontalAlignment="Center" Width="70" />
        <Button Content = "Signin" Background="#FF544CFB"   Foreground="White" Style="{StaticResource BaseButtonStyle}" Height = "30" VerticalAlignment="Top"  Click="SignClick" Grid.Row="2" FontSize="10" HorizontalAlignment="Center" Width="70" />
    </Grid>
</UserControl>